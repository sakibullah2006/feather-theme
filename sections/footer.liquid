{%- liquid
  assign has_social_icons = true
  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank and settings.social_dribbble_link == blank
    assign has_social_icons = false
  endif
-%}

<footer
  class="bg-white text-gray-900 border-t border-gray-200"
  style="margin-top: {{ section.settings.margin_top }}px;"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {%- comment -%} Mobile Accordion {%- endcomment -%}
    <div
      class="lg:hidden divide-y divide-gray-200"
      x-data="{ openSection: null }"
    >
      {%- comment -%} Contact Info Mobile {%- endcomment -%}
      {%- if section.settings.show_contact_info -%}
        <div class="py-4">
          <button
            @click="openSection = openSection === 'contact' ? null : 'contact'"
            class="w-full flex items-center justify-between text-left"
            :aria-expanded="openSection === 'contact'"
          >
            <span class="text-sm font-bold">GET IN TOUCH</span>
            <svg
              class="w-5 h-5 transition-transform duration-200"
              :class="openSection === 'contact' ? 'rotate-180' : ''"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <div
            x-show="openSection === 'contact'"
            x-collapse
            class="pt-4 space-y-3"
          >
            {%- liquid
              if section.settings.use_theme_logo
                assign footer_logo = settings.logo
              else
                assign footer_logo = section.settings.company_logo
              endif
              assign logo_width = section.settings.logo_width | default: 180
            -%}
            {%- if footer_logo != blank -%}
              <img
                src="{{ footer_logo | image_url: width: logo_width }}"
                alt="{{ shop.name }}"
                width="{{ logo_width }}"
                height="auto"
                style="width: {{ logo_width }}px; height: auto;"
                loading="lazy"
                class="mb-4"
              >
            {%- else -%}
              <h2 class="text-xl font-bold mb-4">{{ shop.name }}</h2>
            {%- endif -%}

            {%- if section.settings.address != blank -%}
              <div class="flex items-start gap-2 text-sm text-gray-600">
                <svg class="w-4 h-4 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span>{{ section.settings.address }}</span>
              </div>
            {%- endif -%}

            {%- if section.settings.phone != blank -%}
              <div class="flex items-center gap-2 text-sm text-gray-600">
                <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <a href="tel:{{ section.settings.phone }}" class="hover:text-gray-900">
                  {{ section.settings.phone }}
                </a>
              </div>
            {%- endif -%}

            {%- if section.settings.email != blank -%}
              <div class="flex items-center gap-2 text-sm text-gray-600">
                <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <a href="mailto:{{ section.settings.email }}" class="hover:text-gray-900">
                  {{ section.settings.email }}
                </a>
              </div>
            {%- endif -%}

            {%- if has_social_icons and section.settings.show_social -%}
              <div class="pt-2">
                {%- render 'social-icons' -%}
              </div>
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}

      {%- comment -%} Dynamic Blocks Mobile {%- endcomment -%}
      {%- for block in section.blocks -%}
        <div class="py-4" {{ block.shopify_attributes }}>
          {%- if block.settings.show_heading -%}
            <button
              @click="openSection = openSection === 'block-{{ block.id }}' ? null : 'block-{{ block.id }}'"
              class="w-full flex items-center justify-between text-left"
              :aria-expanded="openSection === 'block-{{ block.id }}'"
            >
              <span class="text-sm font-bold">{{ block.settings.heading }}</span>
              <svg
                class="w-5 h-5 transition-transform duration-200"
                :class="openSection === 'block-{{ block.id }}' ? 'rotate-180' : ''"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
          {%- endif -%}
          <div
            x-show="openSection === 'block-{{ block.id }}'"
            x-collapse
            class="pt-4"
          >
            {%- case block.type -%}
              {%- when 'footer-menu' -%}
                {%- if block.settings.menu != blank -%}
                  <ul class="space-y-2">
                    {%- for link in linklists[block.settings.menu].links -%}
                      <li>
                        <a
                          href="{{ link.url }}"
                          class="text-[13px] text-gray-600 hover:text-gray-900 transition-colors"
                        >
                          {{ link.title }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              {%- when 'footer-text' -%}
                {%- if block.settings.content != blank -%}
                  <div class="prose prose-sm text-gray-600">
                    {{ block.settings.content }}
                  </div>
                {%- endif -%}
            {%- endcase -%}
          </div>
        </div>
      {%- endfor -%}

      {%- comment -%} Newsletter Mobile {%- endcomment -%}
      {%- if section.settings.newsletter_enable -%}
        <div class="py-4">
          <button
            @click="openSection = openSection === 'newsletter' ? null : 'newsletter'"
            class="w-full flex items-center justify-between text-left"
            :aria-expanded="openSection === 'newsletter'"
          >
            <span class="text-sm font-bold">{{ section.settings.newsletter_heading }}</span>
            <svg
              class="w-5 h-5 transition-transform duration-200"
              :class="openSection === 'newsletter' ? 'rotate-180' : ''"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <div
            x-show="openSection === 'newsletter'"
            x-collapse
            class="pt-4"
          >
            {%- if section.settings.newsletter_description != blank -%}
              <p class="text-[13px] text-gray-600 mb-4">{{ section.settings.newsletter_description }}</p>
            {%- endif -%}
            {%- form 'customer', id: 'ContactFooterMobile', class: 'space-y-3' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="relative">
                <input
                  type="email"
                  name="contact[email]"
                  placeholder="Your email address"
                  class="w-full px-3 py-2.5 pr-10 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-gray-900 focus:border-transparent text-[13px]"
                  autocomplete="email"
                  required
                >
                <button
                  type="submit"
                  class="absolute right-2 top-1/2 -translate-y-1/2 p-2 hover:opacity-70 transition-opacity"
                  aria-label="Subscribe"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                  </svg>
                </button>
              </div>
              {%- if form.posted_successfully? -%}
                <p class="text-sm text-green-600">
                  {{ 'newsletter.success' | t | default: 'Thanks for subscribing!' }}
                </p>
              {%- endif -%}
              {%- if form.errors -%}
                <p class="text-sm text-red-600">{{ form.errors | default_errors }}</p>
              {%- endif -%}
            {%- endform -%}
          </div>
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Desktop Layout {%- endcomment -%}
    <div class="hidden lg:block py-8">
      {%- comment -%} Main Footer Grid - Two Sections {%- endcomment -%}
      <div class="grid grid-cols-[1fr_auto] gap-8 ">
        {%- comment -%} LEFT SECTION: Contact Info + Menu Blocks (Yellow) {%- endcomment -%}
        {%- liquid
          assign col_class = 'grid-cols-1 md:grid-cols-2 lg:grid-cols-' | append: section.settings.columns_desktop
        -%}
        <div class="grid {{ col_class }} gap-6 ">
          {%- comment -%} Contact Info {%- endcomment -%}
          {%- if section.settings.show_contact_info -%}
            <div class="space-y-3 overflow-hidden">
              {%- liquid
                if section.settings.use_theme_logo
                  assign footer_logo = settings.logo
                else
                  assign footer_logo = section.settings.company_logo
                endif
                assign logo_width = section.settings.logo_width | default: 180
              -%}
              {%- if footer_logo != blank -%}
                <img
                  src="{{ footer_logo | image_url: width: logo_width }}"
                  alt="{{ shop.name }}"
                  width="{{ logo_width }}"
                  height="auto"
                  style="width: {{ logo_width }}px; height: auto;"
                  loading="lazy"
                >
              {%- else -%}
                <h2 class="text-lg font-bold">{{ shop.name }}</h2>
              {%- endif -%}

              {%- if section.settings.address != blank -%}
                <div class="flex items-start gap-2 text-sm text-gray-600">
                  <svg class="w-4 h-4 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <span class="text-[13px]">{{ section.settings.address }}</span>
                </div>
              {%- endif -%}

              {%- if section.settings.phone != blank -%}
                <div class="flex items-center gap-2 text-sm text-gray-600">
                  <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <a href="tel:{{ section.settings.phone }}" class="hover:text-gray-900 text-[13px]">
                    {{ section.settings.phone }}
                  </a>
                </div>
              {%- endif -%}

              {%- if section.settings.email != blank -%}
                <div class="flex items-center gap-2 text-sm text-gray-600">
                  <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <a href="mailto:{{ section.settings.email }}" class="hover:text-gray-900 text-[13px]">
                    {{ section.settings.email }}
                  </a>
                </div>
              {%- endif -%}

              {%- if has_social_icons and section.settings.show_social -%}
                <div class="pt-2">
                  {%- render 'social-icons' -%}
                </div>
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- comment -%} Dynamic Blocks (Menus) {%- endcomment -%}
          {%- for block in section.blocks -%}
            <div class="space-y-3 flex flex-col" {{ block.shopify_attributes }}>
              {%- if block.settings.show_heading -%}
                <h3 class="text-xs font-bold uppercase tracking-widest text-gray-900">
                  {{ block.settings.heading }}
                </h3>
              {%- endif -%}

              {%- case block.type -%}
                {%- when 'footer-menu' -%}
                  {%- assign menu = linklists[block.settings.menu] -%}
                  {%- if menu.links.size > 0 -%}
                    <ul class="space-y-2">
                      {%- for link in menu.links -%}
                        <li>
                          <a
                            href="{{ link.url }}"
                            class="text-[13px] text-gray-600 hover:text-gray-900 transition-colors"
                          >
                            {{ link.title }}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                {%- when 'footer-text' -%}
                  {%- if block.settings.content != blank -%}
                    <div class="prose prose-sm text-gray-600 text-[13px]">
                      {{ block.settings.content }}
                    </div>
                  {%- endif -%}
              {%- endcase -%}
            </div>
          {%- endfor -%}
        </div>

        {%- comment -%} RIGHT SECTION: Localization + Newsletter (Green) {%- endcomment -%}
        {%- comment -%} RIGHT SECTION: Localization + Newsletter (Green) {%- endcomment -%}
        <div class="flex flex-col gap-8 min-w-[280px] max-w-[320px]">
          {%- comment -%} Localization {%- endcomment -%}
          {%- liquid
            assign show_country_selector = false
            if section.settings.enable_country_selector and localization.available_countries.size > 1
              assign show_country_selector = true
            endif
            assign show_language_selector = false
            if section.settings.enable_language_selector and localization.available_languages.size > 1
              assign show_language_selector = true
            endif
          -%}
          {%- if show_country_selector or show_language_selector -%}
            <div class="flex flex-wrap gap-3">
              {%- if show_country_selector -%}
                <localization-form>
                  {%- form 'localization', id: 'FooterCountryForm' -%}
                    {%- render 'country-localization' -%}
                  {%- endform -%}
                </localization-form>
              {%- endif -%}

              {%- if show_language_selector -%}
                <localization-form>
                  {%- form 'localization', id: 'FooterLanguageForm' -%}
                    {%- render 'language-localization' -%}
                  {%- endform -%}
                </localization-form>
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- comment -%} Newsletter {%- endcomment -%}
          {%- if section.settings.newsletter_enable -%}
            <div class="space-y-3">
              <h3 class="text-xs font-bold uppercase tracking-widest text-gray-900">
                {{ section.settings.newsletter_heading }}
              </h3>
              {%- if section.settings.newsletter_description != blank -%}
                <p class="text-[13px] text-gray-600">{{ section.settings.newsletter_description }}</p>
              {%- endif -%}
              {%- form 'customer', id: 'ContactFooter', class: 'space-y-3' -%}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="relative">
                  <input
                    type="email"
                    name="contact[email]"
                    placeholder="Your email address"
                    class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent text-sm"
                    autocomplete="email"
                    required
                  >
                  <button
                    type="submit"
                    class="absolute right-2 top-1/2 -translate-y-1/2 p-2 hover:opacity-70 transition-opacity"
                    aria-label="Subscribe"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>
                  </button>
                </div>
                {%- if form.posted_successfully? -%}
                  <p class="text-sm text-green-600">
                    {{ 'newsletter.success' | t | default: 'Thanks for subscribing!' }}
                  </p>
                {%- endif -%}
                {%- if form.errors -%}
                  <p class="text-sm text-red-600">{{ form.errors | default_errors }}</p>
                {%- endif -%}
              {%- endform -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>

    {%- comment -%} Footer Bottom {%- endcomment -%}
    <div class="border-t border-gray-200 py-4">
      <div class="flex flex-col lg:flex-row items-center justify-between gap-4">
        {%- comment -%} Copyright & Links {%- endcomment -%}
        <div class="flex flex-col lg:flex-row items-center gap-4 text-center lg:text-left">
          <p class="text-[11px] text-gray-500 uppercase tracking-wide">
            Â© {{ 'now' | date: '%Y' }}
            {{ shop.name }}
          </p>
          {%- if section.settings.show_policy -%}
            <ul class="flex flex-wrap gap-4 text-[11px] text-gray-500 uppercase tracking-wide">
              {%- for policy in shop.policies -%}
                {%- if policy != blank -%}
                  <li>
                    <a href="{{ policy.url }}" class="hover:text-gray-900">{{ policy.title | escape }}</a>
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>

        {%- comment -%} Payment Icons {%- endcomment -%}
        {%- if section.settings.payment_enable -%}
          <div class="flex items-center gap-2 flex-wrap justify-center">
            {%- for type in shop.enabled_payment_types -%}
              <div class="w-12 h-8 flex items-center justify-center bg-white border border-gray-200 rounded overflow-hidden">
                {{ type | payment_type_svg_tag: class: 'w-full h-full object-contain p-1' }}
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
      "type": "checkbox",
      "id": "show_contact_info",
      "label": "Show contact information",
      "default": true
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Desktop columns (Left Section)"
    },
    {
      "type": "checkbox",
      "id": "use_theme_logo",
      "label": "Use theme logo",
      "default": true,
      "info": "Uncheck to use a custom logo for the footer"
    },
    {
      "type": "image_picker",
      "id": "company_logo",
      "label": "Custom footer logo",
      "info": "Only used when 'Use theme logo' is disabled"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Logo width",
      "default": 80
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "30 Buttonwood St.Pataskala OH 43062"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "default": "(+1)-613-333-0101"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "contact@company.com"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social media icons",
      "default": true,
      "info": "Configure social links in theme settings"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter heading",
      "default": "Newsletter Sign Up"
    },
    {
      "type": "textarea",
      "id": "newsletter_description",
      "label": "Newsletter description",
      "default": "Subscribe to our newsletter and get 10% off your first purchase"
    },
    {
      "type": "header",
      "content": "Localization"
    },
    {
      "type": "checkbox",
      "id": "enable_country_selector",
      "label": "Enable country/region selector",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_language_selector",
      "label": "Enable language selector",
      "default": false
    },
    {
      "type": "header",
      "content": "Footer Bottom"
    },
    {
      "type": "checkbox",
      "id": "payment_enable",
      "label": "Show payment icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_policy",
      "label": "Show policy links",
      "default": false
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 48
    }
  ],
  "blocks": [
    {
      "type": "footer-menu",
      "name": "Footer menu",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading",
          "default": "Quick links"
        },
        {
          "type": "checkbox",
          "id": "show_heading",
          "label": "Show heading",
          "default": true
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    },
    {
      "type": "footer-text",
      "name": "Footer text",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading",
          "default": "About us"
        },
        {
          "type": "checkbox",
          "id": "show_heading",
          "label": "Show heading",
          "default": true
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Add your custom text content here.</p>"
        }
      ]
    }
  ],
  "max_blocks": 5
}
