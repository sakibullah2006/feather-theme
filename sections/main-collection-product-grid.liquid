<div
  class="color-{{ section.settings.color_scheme }} pt-{{ section.settings.padding_top }} pb-{{ section.settings.padding_bottom }}"
  x-data="
    {
      currentSortBy: '{{ collection.sort_by | default: collection.default_sort_by }}',
      updateSort(url) {
        window.dispatchEvent(new CustomEvent('filter-sort-trigger', { detail: { url: url } }));
      },
      init() {
        // Listen for URL changes to update current sort
        window.addEventListener('filter-sort-trigger', (e) => {
          const url = new URL(e.detail.url, window.location.origin);
          this.currentSortBy = url.searchParams.get('sort_by') || '{{ collection.default_sort_by }}';
        });
      }
    }
  "
>
  {%- paginate collection.products by section.settings.products_per_page -%}
    <div class="container mx-auto px-6" id="CollectionContainer">
      <div class="flex flex-col md:flex-row justify-between items-center py-6 border-y border-gray-100 mb-8">
        <div class="flex items-center gap-4">
          <h1 class="text-2xl font-medium tracking-tight">{{ collection.title }}</h1>
          <span
            id="CollectionProductCount"
            class="text-[10px] font-bold bg-gray-100 px-3 py-1 rounded-full uppercase text-gray-500"
          >
            {{ collection.products_count }} Products
          </span>
        </div>

        <div class="flex items-center gap-4">
          {%- if section.settings.enable_sorting -%}
            <div class="hidden md:block  relative" x-data="{ open: false }">
              <button
                @click="open = !open"
                class="flex items-center px-16 justify-between py-2.5 border border-gray-200 rounded-full text-sm font-medium"
              >
                <span class="flex gap-2 items-center">
                  Sort By
                  <svg
                    class="w-4 h-4"
                    :class="open ? 'rotate-180' : ''"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M19 9l-7 7-7-7" stroke-width="1.5"/>
                  </svg>
                </span>
              </button>
              <div
                x-show="open"
                @click.away="open = false"
                x-cloak
                class="absolute right-0 mt-2 w-56 bg-white border border-gray-200 shadow-2xl rounded-xl z-50 overflow-hidden"
              >
                {%- for option in collection.sort_options -%}
                  {%- if option.value contains 'title-' or option.value contains 'created-' -%}
                    {%- continue -%}
                  {%- endif -%}
                  <button
                    @click="updateSort('{{ request.path }}?sort_by={{ option.value }}'); open = false"
                    :class="currentSortBy === '{{ option.value }}' ? 'font-bold text-black bg-gray-50' : 'text-gray-500'"
                    class="w-full text-left px-5 py-3 text-sm hover:bg-gray-50 transition-colors"
                  >
                    {{ option.name }}
                  </button>
                {%- endfor -%}
              </div>
            </div>
          {%- endif -%}

          <button
            @click="window.dispatchEvent(new CustomEvent('toggle-filters'))"
            class="md:hidden flex items-center gap-2 px-6 py-3 bg-black text-white rounded-full text-xs font-bold"
          >
            Filter & Sort
          </button>
        </div>
      </div>

      <div class="flex flex-col lg:flex-row gap-12 items-start">
        {%- if section.settings.enable_filtering -%}
          <aside class="hidden lg:block w-64 shrink-0 sticky top-10">
            {% render 'facets', results: collection, section_id: section.id %}
          </aside>
        {%- endif -%}

        <div class="flex-1 w-full" id="ProductGridContainer">
          <div
            class="relative transition-opacity duration-300"
            :class="$store.hydrator && $store.hydrator.isHydrating ? 'opacity-40 pointer-events-none' : 'opacity-100'"
          >
            <template x-if="$store.hydrator && $store.hydrator.isHydrating">
              <div class="absolute inset-0 h-dvh z-10 flex justify-center pt-20">
                <div class="w-10 h-10 border-4 border-gray-100 border-t-black rounded-full animate-spin"></div>
              </div>
            </template>

            {%- if collection.products.size == 0 -%}
              <div class="py-40 text-center bg-gray-50 rounded-3xl">
                <p class="text-gray-500 mb-6">No products found for these criteria.</p>
                <a
                  href="{{ collection.url }}"
                  class="inline-block px-10 py-4 bg-black text-white rounded-full font-bold text-sm"
                  >Clear All</a
                >
              </div>
            {%- else -%}
              <ul class="grid grid-cols-{{ section.settings.columns_mobile }} md:grid-cols-2 lg:grid-cols-{{ section.settings.columns_desktop }} gap-x-8 gap-y-12">
                {%- for product in collection.products -%}
                  <li>{% render 'card-product', product: product, image_ratio: section.settings.image_ratio %}</li>
                {%- endfor -%}
              </ul>

              {%- if paginate.pages > 1 -%}
                <div class="mt-16 pt-8 border-t border-gray-100">
                  {% render 'pagination',
                    paginate: paginate,
                    section_id: section.id,
                    slots: 'ProductGridContainer,FacetFiltersForm,FacetsMobileContent,CollectionProductCount',
                    scroll_target: 'CollectionContainer'
                  %}
                </div>
              {%- endif -%}
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  {%- endpaginate -%}
</div>

