<div
  class="color-{{ section.settings.color_scheme }} pt-{{ section.settings.padding_top }} pb-{{ section.settings.padding_bottom }}"
  x-data="
    {
      sortTitle: 'Sort By',
      currentSortBy: '{{ collection.sort_by | default: collection.default_sort_by }}',

      updateSort(sortByValue, sortTitle) {
        this.currentSortBy = sortByValue;
        this.sortTitle = sortTitle;

        // Construct new URL with updated sort parameter
        const url = new URL(window.location.href);
        url.searchParams.set('sort_by', sortByValue);

        // Directly fetch using the hydrator
        $store.hydrator.fetch(
          url.toString(),
          '{{ section.id }}',
          ['ProductGridContainer', 'FacetFiltersForm', 'FacetsMobileContent', 'CollectionProductCount']
        );
      },

      removeFilter(url) {
        if (!url) return;
        $store.hydrator.fetch(
          url,
          '{{ section.id }}',
          ['ProductGridContainer', 'FacetFiltersForm', 'FacetsMobileContent', 'CollectionProductCount']
        );
      },
    }
  "
>
  {%- paginate collection.products by section.settings.products_per_page -%}
    <div class="container-lg container-(--page-width) mx-auto px-6" id="CollectionContainer">
      <div class="flex  flex-col md:flex-row justify-between items-center pt-6 pb-4 border-y border-gray-100 mb-6">
        <div class="flex items-center gap-4">
          <span
            id="CollectionProductCount"
            class="text-xs font-bold mb-2 md:mb-0 bg-gray-100 px-3 py-1 rounded-full uppercase text-gray-500"
          >
            {{ collection.products_count }} Products
          </span>
        </div>

        <div class="flex items-center justify-between max-md:w-full gap-4">
          <button
            @click.throttle.300ms="window.dispatchEvent(new CustomEvent('toggle-filters'))"
            class="md:hidden flex items-center gap-2 px-6 py-2.5 bg-black text-white rounded-full text-sm font-bold shadow-sm active:scale-95 transition-transform"
          >
            Filter
          </button>

          {%- if section.settings.enable_sorting -%}
            <div class="block relative" x-data="{ open: false }">
              <button
                @click.throttle.300ms="open = !open"
                class="flex items-center justify-between gap-3 px-2 w-40  py-2 border border-gray-200 rounded-md text-sm font-medium bg-white hover:border-gray-300 transition-colors"
                :class="open ? 'border-gray-300 bg-gray-50' : ''"
              >
                <span class="tracking-widerc text-xs" x-text="sortTitle"> </span>
                <svg
                  class="w-4 h-4 transition-transform duration-200"
                  :class="open ? 'rotate-180' : ''"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path d="M19 9l-7 7-7-7" stroke-width="1.5"/>
                </svg>
              </button>
              <div
                x-show="open"
                @click.away="open = false"
                x-cloak
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 translate-y-2"
                x-transition:enter-end="opacity-100 translate-y-0"
                x-transition:leave="transition ease-in duration-150"
                x-transition:leave-start="opacity-100 translate-y-0"
                x-transition:leave-end="opacity-0 translate-y-2"
                class="absolute right-0 mt-2 w-48 md:w-56 bg-white border border-gray-100 shadow-xl rounded-xl z-50 overflow-hidden"
              >
                {%- for option in collection.sort_options -%}
                  {%- if option.value contains 'title-' or option.value contains 'created-' -%}
                    {%- continue -%}
                  {%- endif -%}
                  <button
                    @click="updateSort('{{ option.value }}', '{{ option.name }}'); open = false"
                    :class="currentSortBy === '{{ option.value }}' ? 'font-bold text-black bg-gray-50' : 'text-gray-500'"
                    class="w-full text-left px-5 py-3 text-sm hover:bg-gray-50 transition-colors"
                  >
                    {{ option.name }}
                  </button>
                {%- endfor -%}
              </div>
            </div>
          {%- endif -%}
        </div>
      </div>

      <div class="flex flex-col lg:flex-row gap-12 items-start ">
        {%- if section.settings.enable_filtering -%}
          <aside class="hidden lg:block w-64 shrink-0 sticky top-10">
            {% render 'facets', results: collection, section_id: section.id %}
          </aside>
        {%- endif -%}

        <div class="flex-1 w-full" id="ProductGridContainer">
          <div
            class="relative transition-opacity duration-300"
            :class="$store.hydrator && $store.hydrator.isHydrating ? 'opacity-40 pointer-events-none' : 'opacity-100'"
          >
            <template x-if="$store.hydrator && $store.hydrator.isHydrating">
              <div class="absolute inset-0 h-dvh z-10 flex justify-center pt-20">
                <div class="w-10 h-10 border-4 border-gray-100 border-t-black rounded-full animate-spin"></div>
              </div>
            </template>

            <div class="w-full">
              {% comment %} Render active options as pills with coss on left {% endcomment %}

              <ul class="mb-4 active-filters flex flex-wrap gap-2">
                {%- assign has_active_filters = false -%}
                {%- for filter in collection.filters -%}
                  {%- if filter.active_values.size > 0 -%}
                    {%- assign has_active_filters = true -%}
                    {%- break -%}
                  {%- endif -%}
                {%- endfor -%}
                {% comment %} Clear all filters button  {% endcomment %}
                {%- if has_active_filters -%}
                  <li class="active-filter   bg-red-100 rounded-full text-xs font-medium text-gray-800 transition-colors hover:bg-red-200">
                    <a
                      href="{{ collection.url }}"
                      @click.prevent="removeFilter('{{ collection.url }}')"
                      class="active-filter__remove px-3 py-1.5 inline-flex items-center gap-2  hover:text-red-800 "
                      aria-label="Remove All Filters"
                    >
                      <svg
                        class="w-3 h-3 text-red-800 "
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                      <span>Clear All</span>
                    </a>
                  </li>
                {%- endif -%}
                {%- for filter in collection.filters -%}
                  {%- for active_value in filter.active_values -%}
                    <li class="active-filter inline-flex items-center gap-2 px-3 py-1.5 bg-gray-100 rounded-full text-xs font-medium text-gray-800 transition-colors hover:bg-gray-200">
                      <a
                        href="{{ active_value.url_to_remove }}"
                        @click.prevent="removeFilter('{{ active_value.url_to_remove }}')"
                        class="active-filter__remove text-gray-500 hover:text-black"
                        aria-label="Remove {{ active_value.label }}"
                      >
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                      </a>
                      <span class="select-none">{{ active_value.label }}</span>
                    </li>
                  {%- endfor -%}
                {%- endfor -%}
              </ul>
            </div>

            {%- if collection.products.size == 0 -%}
              <div class="py-40 text-center bg-gray-50 rounded-3xl">
                <p class="text-gray-500 mb-6">No products found for these criteria.</p>
              </div>
            {%- else -%}
              <ul class="grid grid-cols-{{ section.settings.columns_mobile }} md:grid-cols-2 lg:grid-cols-{{ section.settings.columns_desktop }} gap-x-8 gap-y-12">
                {%- for product in collection.products -%}
                  <li>
                    {% render 'card-product', product: product, image_ratio: section.settings.image_ratio %}
                  </li>
                {%- endfor -%}
              </ul>

              {%- if paginate.pages > 1 -%}
                <div class="mt-16 pt-8 border-t border-gray-100">
                  {% render 'pagination',
                    paginate: paginate,
                    section_id: section.id,
                    slots: 'ProductGridContainer,FacetFiltersForm,FacetsMobileContent,CollectionProductCount',
                    scroll_target: 'CollectionContainer'
                  %}
                </div>
              {%- endif -%}
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  {%- endpaginate -%}
</div>

{% schema %}
