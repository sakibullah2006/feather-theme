<div
  class="flex justify-end flex-col-reverse gap-4 md:flex-row md:items-end max-w-[480px]"
  x-data="
    {
      activeMedia: {{ product.selected_or_first_available_variant.featured_media.id | default: product.media.first.id | default: 'null' }},
      mediaIds: [{% for media in product.media %}{{ media.id }}{% unless forloop.last %},{% endunless %}{% endfor %}],
      next() {
          let index = this.mediaIds.indexOf(this.activeMedia);
          if (index < this.mediaIds.length - 1) {
              this.activeMedia = this.mediaIds[index + 1];
          } else {
              this.activeMedia = this.mediaIds[0];
          }
      },
      prev() {
          let index = this.mediaIds.indexOf(this.activeMedia);
          if (index > 0) {
              this.activeMedia = this.mediaIds[index - 1];
          } else {
              this.activeMedia = this.mediaIds[this.mediaIds.length - 1];
          }
      }
    }
  "
>
  <!-- Thumbnails (Left on Desktop, Bottom on Mobile) -->
  <div class="flex gap-3 overflow-x-auto  md:flex-col md:w-20 md:h-[600px] md:overflow-y-auto md:overflow-x-hidden [&::-webkit-scrollbar]:hidden [scrollbar-width:none]">
    <ul
      class="flex gap-3 p-0 m-0 list-none md:flex-col"
      role="list"
    >
      {%- for media in product.media -%}
        <li
          class="w-[60px] h-[60px] shrink-0 md:w-full md:h-20"
        >
          <button
            class="w-full h-full p-0 bg-gray-100 cursor-pointer overflow-hidden rounded-lg block relative transition-all duration-200"
            @mouseover="activeMedia={{ media.id }}"
            aria-label="{{ 'products.product.media.load_image' | t: index: forloop.index }}"
            :aria-current="activeMedia === {{ media.id }}"
          >
            <img
              src="{{ media | image_url: width: 150, height: 150, crop: 'center' }}"

              alt="{{ media.alt | escape }}"
              loading="lazy"
              class="w-full -z-1 h-full object-cover block transition-opacity duration-300"
              width="150"
              height="150"
            >
            {% comment %} image light overlay for active image {% endcomment %}
            <div class="absolute inset-0  transition-opacity duration-300 pointer-events-none" style="background-color: rgba(0,0,0,0.25);" :class="activeMedia === {{ media.id }} ? 'opacity-100' : 'opacity-0'"></div>

            {% comment %} on the bottom-left side {% endcomment %}
            {%- if media.media_type == 'video' or media.media_type == 'external_video' -%}
              <span class="absolute top-1/2 left-[calc(90%)] -translate-x-1/2 -translate-y-1/2   text-white">
                <span class="block h-6 w-6">
                  {{ 'icon-play.svg' | inline_asset_content }}
                </span>
              </span>
            {%- elsif media.media_type == 'model' -%}
              <span class="absolute top-2.5 right-2 p-0.5 text-black">
                <span class="block w-4 h-4">
                  {{ 'icon-3d-model.svg' | inline_asset_content }}
                </span>
              </span>
            {%- endif -%}
          </button>
        </li>
      {%- endfor -%}
    </ul>
  </div>

  <!-- Main Viewer (Right on Desktop) -->
  <div class="flex-1  w-full min-w-0 relative group">
    <div class="relative w-full rounded-2xl overflow-hidden bg-gray-100  mx-auto">
      <ul
        class="block p-0 m-0 list-none"
        role="list"
      >
        {%- for media in product.media -%}
          <li
            x-show="activeMedia === {{ media.id }}"
            class="w-full"
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0"
            x-transition:enter-end="opacity-100"
          >
            {% render 'product-media',
              media: media,
              loop: block.settings.enable_video_looping,
              variant_image: false,
              media_fit: 'object-contain'
            %}
          </li>
        {%- endfor -%}
      </ul>

      <!-- Navigation Arrows -->
      <div class="absolute bottom-6 right-6 flex gap-3 z-10">
        <button
          @click="prev()"
          class="w-10 h-10 bg-white rounded-full shadow-lg flex items-center justify-center text-black hover:bg-gray-50 transition-colors"
          aria-label="Previous slide"
        >
          {% render 'icon-chevron', class: 'w-5 h-5 -ml-0.5' %}
        </button>
        <button
          @click="next()"
          class="w-10 h-10 bg-white rounded-full shadow-lg flex items-center justify-center text-black hover:bg-gray-50 transition-colors"
          aria-label="Next slide"
        >
          {% render 'icon-chevron', direction: 'right', class: 'w-5 h-5 -mr-0.5' %}
        </button>
      </div>
    </div>
  </div>
</div>
  

<script src="{{ 'media-gallery.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Product Media Gallery",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_video_looping",
      "label": "Enable video looping",
      "default": true
    }
  ]
}
{% endschema %}
