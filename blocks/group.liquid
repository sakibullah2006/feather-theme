{%- liquid
  assign s = block.settings
  assign tag = 'div'
  if s.link != blank
    assign tag = 'a'
  endif

  assign wrapper_classes = 'group-block relative overflow-hidden flex flex-col'

  if s.width == 'fit-content'
    assign wrapper_classes = wrapper_classes | append: ' w-fit'
  elsif s.width == 'fill'
    assign wrapper_classes = wrapper_classes | append: ' w-full'
  endif

  if s.height == 'fit'
    assign wrapper_classes = wrapper_classes | append: ' h-fit'
  elsif s.height == 'fill'
    assign wrapper_classes = wrapper_classes | append: ' grow'
  endif

  if s.inherit_color_scheme == false
    assign wrapper_classes = wrapper_classes | append: ' color-' | append: s.color_scheme | append: ' gradient'
  endif

  # Border Logic
  assign border_style = ''
  if s.border != 'none'
    assign border_style = 'border: ' | append: s.border_width | append: 'px ' | append: s.border | append: ' rgba(var(--color-foreground), ' | append: s.border_opacity | append: '%);'
    if s.border_radius > 0
      assign border_style = border_style | append: ' border-radius: ' | append: s.border_radius | append: 'px;'
    endif
  else
    if s.border_radius > 0
      assign border_style = border_style | append: ' border-radius: ' | append: s.border_radius | append: 'px;'
    endif
  endif

  # Padding
  assign padding_style = 'padding-top: ' | append: s['padding-block-start'] | append: 'px; padding-bottom: ' | append: s['padding-block-end'] | append: 'px; padding-left: ' | append: s['padding-inline-start'] | append: 'px; padding-right: ' | append: s['padding-inline-end'] | append: 'px;'

  # Dimensions (Custom)
  assign dimension_style = ''
  if s.width == 'custom'
    assign dimension_style = dimension_style | append: ' width: ' | append: s.custom_width | append: '%;'
  endif
  if s.height == 'custom'
    assign dimension_style = dimension_style | append: ' height: ' | append: s.custom_height | append: '%;'
  endif
  # Mobile width handling requires media query or responsive utility.
  # Since we are using inline styles for custom dynamic % values, we might rely on a class or style block for mobile.
  # For simplicity with Tailwind, custom arbitrary values:

  # Content Flex Classes
  assign content_direction = s.content_direction
  assign justify_class = ''
  assign align_class = ''
  assign flex_classes = 'flex w-full grow z-10 relative'

  if content_direction == 'row'
    if s.vertical_on_mobile
      assign flex_classes = flex_classes | append: ' flex-col md:flex-row'
    else
      assign flex_classes = flex_classes | append: ' flex-row'
    endif

    # Horizontal Alignment (Main Axis for Row)
    case s.horizontal_alignment
      when 'flex-start'
        assign justify_class = 'justify-start'
      when 'center'
        assign justify_class = 'justify-center'
      when 'flex-end'
        assign justify_class = 'justify-end'
      when 'space-between'
        assign justify_class = 'justify-between'
    endcase

    # Vertical Alignment (Cross Axis for Row)
    case s.vertical_alignment
      when 'flex-start'
        assign align_class = 'items-start'
      when 'center'
        assign align_class = 'items-center'
      when 'flex-end'
        if s.align_baseline
          assign align_class = 'items-baseline'
        else
          assign align_class = 'items-end'
        endif
    endcase

  else
    # Column
    assign flex_classes = flex_classes | append: ' flex-col'

    # Vertical Alignment (Main Axis for Column)
    case s.vertical_alignment_flex_direction_column
      when 'flex-start'
        assign justify_class = 'justify-start'
      when 'center'
        assign justify_class = 'justify-center'
      when 'flex-end'
        assign justify_class = 'justify-end'
      when 'space-between'
        assign justify_class = 'justify-between'
    endcase

    # Horizontal Alignment (Cross Axis for Column)
    case s.horizontal_alignment_flex_direction_column
      when 'flex-start'
        assign align_class = 'items-start'
      when 'center'
        assign align_class = 'items-center'
      when 'flex-end'
        assign align_class = 'items-end'
    endcase
  endif

  # Responsive Alignment Mapping
  if content_direction == 'row' and s.vertical_on_mobile
    # Apply desktop classes with md: prefix
    assign flex_classes = flex_classes | append: ' md:' | append: justify_class | append: ' md:' | append: align_class
    # Default mobile (col) alignment? usually start/stretch. We'll leave blank or standard.
  else
    assign flex_classes = flex_classes | append: ' ' | append: justify_class | append: ' ' | append: align_class
  endif

  assign gap_style = 'gap: ' | append: s.gap | append: 'px;'
-%}

<{{ tag }}
  class="{{ wrapper_classes }}"
  style="{{ border_style }} {{ padding_style }} {{ dimension_style }}"
  {% if s.link != blank %}
    href="{{ s.link }}"
  {% endif %}
  {% if s.open_in_new_tab %}
    target="_blank"
  {% endif %}
  x-data
>
  {%- if s.background_media == 'image' and s.background_image != blank -%}
    {%- assign bg_pos = s.background_image_position -%}
    {{
      s.background_image
      | image_url: width: 3000
      | image_tag: class: 'absolute inset-0 w-full h-full object-cover z-0', data-position: bg_pos
    }}
    {% if bg_pos == 'fit' %}
      <style>
        #{{ block.id }} .group-bg-image { object-fit: contain; }
      </style>
    {% endif %}
  {%- elsif s.background_media == 'video' and s.video != blank -%}
    {{
      s.video
      | video_tag:
        autoplay: true,
        loop: true,
        muted: true,
        controls: false,
        class: 'absolute inset-0 w-full h-full object-cover z-0'
    }}
  {%- endif -%}

  {%- if s.toggle_overlay -%}
    <div
      class="absolute inset-0 z-0 pointer-events-none"
      style="background: {% if s.overlay_style == 'gradient' %}linear-gradient({{ s.gradient_direction }}, {{ s.overlay_color }}, transparent){% else %}{{ s.overlay_color }}{% endif %};"
    ></div>
  {%- endif -%}

  <div class="{{ flex_classes }}" style="{{ gap_style }}">
    {% content_for 'blocks' %}
  </div>
</{{ tag }}>

