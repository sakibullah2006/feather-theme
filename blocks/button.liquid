{%- assign block_settings = block.settings -%}

<a
  {% if block_settings.link != blank %}
    href="{{ block_settings.link }}"
  {% else %}
    role="link" aria-disabled="true"
  {% endif %}
  class="
    {{ block_settings.style_class }} color-{{ block_settings.color_scheme }} button--{{ block.id }} inline-flex items-center justify-center text-center max-w-full leading-relaxed cursor-pointer transition-all duration-200 ease-in-out
    {% if block_settings.style_class == 'button-primary' %}
       bg-[rgb(var(--color-button))] text-[rgb(var(--color-button-text))] hover:opacity-90 shadow-sm border-none
    {% elsif block_settings.style_class == 'button-secondary' %}
       !bg-transparent text-[rgb(var(--color-secondary-button-text))] border border-solid border-[rgb(var(--color-secondary-button-text))] hover:opacity-75
    {% elsif block_settings.style_class == 'button-link' %}
       !bg-transparent text-[rgb(var(--color-link))] border-none shadow-none underline decoration-1 underline-offset-4 hover:no-underline p-0
    {% endif %}
  "
  {% if block_settings.open_in_new_tab %}
    target="_blank" rel="noopener noreferrer"
  {% endif %}
>
  {{ block_settings.label | default: 'Button' }}
</a>

<style>
  .button--{{ block.id }} {
    width: {% if block_settings.width == 'custom' %}{{ block_settings.custom_width }}%{% else %}fit-content{% endif %};
    padding: {{ block_settings.padding_y }}px {{ block_settings.padding_x }}px;
    border-radius: var(--buttons-radius, 0px);
  }

  @media screen and (max-width: 749px) {
    .button--{{ block.id }} {
      width: {% if block_settings.width_mobile == 'custom' %}{{ block_settings.custom_width_mobile }}%{% else %}fit-content{% endif %};
    }
  }
</style>

{% schema %}
{
  "name": "Button",
  "tag": null,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "label",
      "label": "t:settings.label",
      "default": "t:text_defaults.button_label"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:settings.link"
    },
    {
      "type": "checkbox",
      "id": "open_in_new_tab",
      "label": "t:settings.open_new_tab",
      "default": false
    },
    {
      "type": "select",
      "id": "style_class",
      "label": "t:settings.style",
      "options": [
        {
          "value": "button-primary",
          "label": "t:options.primary"
        },
        {
          "value": "button-secondary",
          "label": "t:options.secondary"
        },
        {
          "value": "button-link",
          "label": "t:options.link"
        }
      ],
      "default": "button-primary"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.size"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:settings.width_desktop",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit_content"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "fit-content"
    },
    {
      "type": "range",
      "id": "custom_width",
      "label": "t:settings.custom_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100,
      "visible_if": "{{ block.settings.width == \"custom\" }}"
    },
    {
      "type": "select",
      "id": "width_mobile",
      "label": "t:settings.width_mobile",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit_content"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "fit-content"
    },
    {
      "type": "range",
      "id": "custom_width_mobile",
      "label": "t:settings.custom_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100,
      "visible_if": "{{ block.settings.width_mobile == \"custom\" }}"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding_x",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:settings.padding_horizontal",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_y",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:settings.padding_vertical",
      "default": 10
    }
  ],
  "presets": [
    {
      "name": "t:names.button",
      "category": "t:categories.basic",
      "settings": {
        "link": "shopify://collections/all"
      }
    }
  ]
}
{% endschema %}
