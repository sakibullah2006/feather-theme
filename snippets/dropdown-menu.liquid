{% doc %}
  Renders a simple dropdown menu for navigation links with children but no grandchildren.

  Displays a compact dropdown menu with basic link items. Includes smooth transition
  animations for opening and closing the dropdown.

  @param {link} link - The parent link object containing child links
  @param {string} [open_id] - ID of the open dropdown menu

  @example
  {% render 'dropdown-menu', link: link, open_id: link.handle %}
{% enddoc %}

<div
  x-show="openId === '{{ open_id }}'"
  x-transition:enter="transition ease-out duration-200"
  x-transition:enter-start="opacity-0 transform translate-y-1"
  x-transition:enter-end="opacity-100 transform translate-y-0"
  x-transition:leave="transition ease-in duration-150"
  x-transition:leave-start="opacity-100 transform translate-y-0"
  x-transition:leave-end="opacity-0 transform translate-y-1"
  style="display: none;"
  class="absolute left-0 top-12 pt-2 min-w-60 rounded-sm bg-white text-gray-900 shadow-xl z-50 overflow-hidden"
  data-dropdown="{{ link.handle }}"
>
  <div class="">
    {%- for child in link.links -%}
      <a
        href="{{ child.url }}"
        class="block px-5 py-3 text-[14px] text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors duration-150 whitespace-nowrap"
      >
        {{ child.title }}
      </a>
    {%- endfor -%}
  </div>
</div>
