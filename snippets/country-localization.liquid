{% doc %}
  Renders a country/region and currency selector dropdown with search functionality.

  @example
  {% form 'localization' %}
    {% render 'country-localization' %}
  {% endform %}
{% enddoc %}

{%- liquid
  assign show_filter = false
  if localization.available_countries.size > 9
    assign show_filter = true
  endif

  assign popular = localization.available_countries | where: 'popular?' | sort: 'name'
  assign show_popular = false
  if localization.available_countries.size > 9 and popular.size > 1
    assign show_popular = true
  endif

  assign currencies = localization.available_countries | map: 'currency' | map: 'iso_code' | uniq
  assign show_currency = false
  if currencies.size > 1
    assign show_currency = true
  endif
-%}

<div
  class="relative"
  x-data="{ open: false, search: '' }"
  @click.outside="open = false"
  @keydown.escape.window="open = false"
>
  <button
    type="button"
    @click="open = !open"
    x-ref="countryButton"
    class="inline-flex items-center gap-2 px-3 py-1.5 text-xs font-medium text-gray-600 hover:text-gray-900 bg-gray-50 hover:bg-gray-100 border border-gray-200 rounded-md transition-all duration-200"
    :aria-expanded="open"
    aria-label="Country and currency selector"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>
    <span>
      {{- localization.country.name }} ({{ localization.country.currency.iso_code }}
      {{ localization.country.currency.symbol -}}
      )
    </span>
    <svg
      class="w-3 h-3 transition-transform duration-200"
      :class="open ? 'rotate-180' : ''"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
    </svg>
  </button>

  <div
    x-show="open"
    x-anchor.bottom-start.offset.4="$refs.countryButton"
    x-cloak
    x-transition:enter="transition ease-out duration-100"
    x-transition:enter-start="opacity-0 scale-95"
    x-transition:enter-end="opacity-100 scale-100"
    x-transition:leave="transition ease-in duration-75"
    x-transition:leave-start="opacity-100 scale-100"
    x-transition:leave-end="opacity-0 scale-95"
    class="w-72 rounded-lg shadow-lg bg-white border border-gray-200 z-50 overflow-hidden"
  >
    {%- if show_filter -%}
      <div class="p-3 border-b border-gray-200">
        <div class="relative">
          <input
            x-model="search"
            @input="Array.from($refs.list.querySelectorAll('[data-name]')).forEach(el => el.style.display = el.dataset.name.toLowerCase().includes(search.toLowerCase()) ? '' : 'none')"
            type="search"
            placeholder="Search countries..."
            class="w-full pl-9 pr-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent"
            autocomplete="off"
          >
          <svg
            class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
      </div>
    {%- endif -%}

    <div class="max-h-80 overflow-y-auto" x-ref="list">
      {%- if show_popular -%}
        <div class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider bg-gray-50">Popular</div>
        <ul class="py-1 border-b border-gray-200">
          {%- for country in popular -%}
            <li data-name="{{ country.name }}">
              <button
                type="button"
                class="w-full flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-150"
                :class="'{{ country.iso_code }}' === '{{ localization.country.iso_code }}' ? 'bg-gray-50 font-medium' : ''"
                @click="$el.closest('form').querySelector('input[name=country_code]').value = '{{ country.iso_code }}'; $el.closest('form').submit(); open = false;"
              >
                <span class="w-5 h-5 flex items-center justify-center">
                  {%- if country.iso_code == localization.country.iso_code -%}
                    <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  {%- endif -%}
                </span>
                <span class="flex-1 text-left">{{ country.name }}</span>
                {%- if show_currency -%}
                  <span class="text-xs text-gray-500 font-mono">
                    {{- country.currency.iso_code }}
                    {{ country.currency.symbol -}}
                  </span>
                {%- endif -%}
              </button>
            </li>
          {%- endfor -%}
        </ul>
      {%- endif -%}

      <ul class="py-1">
        {%- for country in localization.available_countries -%}
          <li data-name="{{ country.name }}">
            <button
              type="button"
              class="w-full flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-150"
              :class="'{{ country.iso_code }}' === '{{ localization.country.iso_code }}' ? 'bg-gray-50 font-medium' : ''"
              @click="$el.closest('form').querySelector('input[name=country_code]').value = '{{ country.iso_code }}'; $el.closest('form').submit(); open = false;"
            >
              <span class="w-5 h-5 flex items-center justify-center">
                {%- if country.iso_code == localization.country.iso_code -%}
                  <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                {%- endif -%}
              </span>
              <span class="flex-1 text-left">{{ country.name }}</span>
              {%- if show_currency -%}
                <span class="text-xs text-gray-500 font-mono">
                  {{- country.currency.iso_code }}
                  {{ country.currency.symbol -}}
                </span>
              {%- endif -%}
            </button>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</div>
<input type="hidden" name="country_code" value="{{ localization.country.iso_code }}">
