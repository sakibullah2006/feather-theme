{% doc %}
  Renders a language selector dropdown.

  @example
  {% form 'localization' %}
    {% render 'language-localization' %}
  {% endform %}
{% enddoc %}

<div class="relative" x-data="{ open: false }" @click.outside="open = false" @keydown.escape.window="open = false">
  <button
    type="button"
    @click="open = !open"
    x-ref="langButton"
    class="inline-flex items-center gap-2 px-3 py-1.5 text-xs font-medium text-gray-600 hover:text-gray-900 bg-gray-50 hover:bg-gray-100 border border-gray-200 rounded-md transition-all duration-200"
    :aria-expanded="open"
    aria-label="Language selector"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
    </svg>
    <span>{{ localization.language.endonym_name | capitalize }}</span>
    <svg
      class="w-3 h-3 transition-transform duration-200"
      :class="open ? 'rotate-180' : ''"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
    </svg>
  </button>

  <div
    x-show="open"
    x-anchor.bottom-start.offset.4="$refs.langButton"
    x-cloak
    x-transition:enter="transition ease-out duration-100"
    x-transition:enter-start="opacity-0 scale-95"
    x-transition:enter-end="opacity-100 scale-100"
    x-transition:leave="transition ease-in duration-75"
    x-transition:leave-start="opacity-100 scale-100"
    x-transition:leave-end="opacity-0 scale-95"
    class="w-48 rounded-lg shadow-lg bg-white border border-gray-200 z-50 overflow-hidden"
  >
    <ul role="list" class="py-1 max-h-64 overflow-y-auto">
      {%- for language in localization.available_languages -%}
        <li>
          <button
            type="button"
            lang="{{ language.iso_code }}"
            class="w-full flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-150"
            :class="'{{ language.iso_code }}' === '{{ localization.language.iso_code }}' ? 'bg-gray-50 font-medium' : ''"
            @click="$el.closest('form').querySelector('input[name=locale_code]').value = '{{ language.iso_code }}'; $el.closest('form').submit(); open = false;"
          >
            <span class="w-5 h-5 flex items-center justify-center">
              {%- if language.iso_code == localization.language.iso_code -%}
                <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              {%- endif -%}
            </span>
            <span class="flex-1 text-left">{{ language.endonym_name | capitalize }}</span>
          </button>
        </li>
      {%- endfor -%}
    </ul>
  </div>
</div>
<input type="hidden" name="locale_code" value="{{ localization.language.iso_code }}">
